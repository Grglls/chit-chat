<%- include('../partials/header') %>

  <div class="card">
    <form action="/posts/<%= post._id %>/?_method=PUT" method="POST">
      <div class="card-header">
        <img src="<%= post.postAuthorAvatar %>" alt="avatar" width="30" height="30" class="rounded">
        <%= post.postAuthorName %>
        on
        <%= post.createdAt.toLocaleString([], {year: 'numeric', month: 'numeric', day: 'numeric', hour: '2-digit', minute: '2-digit'}) %>
      </div>
      <div class="card-body">
        <textarea name="postContent" class="w-100 p-3" style="height: 200px"><%= post.postContent %></textarea>
        <hr>
        <button type="submit" class="btn btn-sm btn-primary">Save Post</button>
      </div>
    </form>
  </div>

<%- include('../partials/footer') %>